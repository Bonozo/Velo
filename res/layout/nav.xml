<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.bonozo.velo.GLSurfaceView_SDL
        android:id="@+id/glsurfaceview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible" >
    </com.bonozo.velo.GLSurfaceView_SDL>

    <FrameLayout
        android:id="@+id/ovelaycontainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/bannercontainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent" >

        <TableLayout
            android:id="@+id/bannercontrolPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/transparent"
            android:orientation="vertical"
            android:stretchColumns="1" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:baselineAligned="true"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:padding="10dip" >

                    <TextView
                        android:id="@+id/currentspeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="0.0"
                        android:padding="10dip"
                        android:text="--MPH "
                        android:textColor="#FF0000"
                        android:textSize="20dip"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/hidecontainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent" >

        <TableLayout
            android:id="@+id/controlPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/transparent"
            android:orientation="vertical"
            android:stretchColumns="1" >

            <TableRow
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:paddingTop="5dip" >

                <LinearLayout
                    android:layout_width="100dip"
                    android:layout_height="20dip"
                    android:layout_gravity="center_horizontal"
                    android:baselineAligned="false"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="400dip"
                        android:layout_height="fill_parent"
                        android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
                        android:indeterminateOnly="true"
                        android:maxHeight="20dip"
                        android:minHeight="20dip"
                        android:paddingLeft="40dip"
                        android:visibility="gone"
                        android:progressDrawable="@android:drawable/progress_horizontal" >
                    </ProgressBar>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:paddingTop="5dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:baselineAligned="false"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <ImageView
                        android:id="@+id/calculateSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="10dip"
                        android:paddingRight="20dip"
                        android:src="@drawable/logo" >
                    </ImageView>

                    <ImageView
                        android:id="@+id/img_backward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/previous" >
                    </ImageView>

                    <ImageView
                        android:id="@+id/img_vp_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dip"
                        android:layout_marginRight="30dip"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:src="@drawable/stop"
                        android:visibility="invisible" >
                    </ImageView>

                    <ImageView
                        android:id="@+id/img_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/gonext" >
                    </ImageView>

                    <ImageView
                        android:id="@+id/img_vp_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:paddingLeft="20dip"
                        android:src="@drawable/vhelp" >
                    </ImageView>

                </LinearLayout>
            </TableRow>
        </TableLayout>
    </FrameLayout>

</merge>